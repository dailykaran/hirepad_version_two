# Backend Environment Configuration

# Server
PORT=5000
NODE_ENV=development

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Email Service Configuration
# Choose one: sendgrid, gmail, smtp, resend
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Gmail Configuration (if using Gmail MCP)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_refresh_token

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_app_password
SMTP_MCP_SERVER_PATH=./smtp-mcp-server.js

# HR Recipients (comma-separated email addresses)
HR_EMAIL_RECIPIENTS=hr@company.com,recruiter@company.com
